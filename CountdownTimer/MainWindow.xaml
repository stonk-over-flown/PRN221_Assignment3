<Window x:Class="CountdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountdownTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="550">
    <Grid>
        <Button x:Name="btn_Start" Content="Start" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Width="354" Click="btn_Start_Click"/>
        <TextBox x:Name="txt_Timer" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Width="354" Height="96" FontSize="70"/>
        <Label x:Name="lbl_Warning" VerticalContentAlignment="Center" Content="Test" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" Height="33" Width="354" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn_Stop" Content="Stop" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" Width="354" Click="btn_Stop_Click"/>
    </Grid>
</Window>

